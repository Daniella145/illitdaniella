/* Общие стили страницы */
body {
    font-family: Arial, sans-serif;
    background-color: #E4FFF7;
    color: #000;
    margin: 0;
    padding: 0;
}

/* Хедер */
header {
    background-color: #5EC56D;
    color: #fff;
    padding: 25px;
    text-align: center;
}

header h1 {
    margin: 0;
    font-size: 28px;
}

/* Заголовки */
h1 {
    color: #5EC56D;
    text-align: center;
    margin: 25px 0;
}

/* Параграфы */
p {
    font-size: 16px;
    line-height: 1.5;
    margin: 10px auto;
    max-width: 900px;
    text-align: center;
}

/* Флекс-контейнер для участников и картинок */
.flex-container {
    display: flex;
    flex-wrap: wrap;
    gap: 25px;
    justify-content: center;
    padding: 20px;
}

/* Флекс-элементы */
.flex-item {
    flex: 1 1 260px;
    max-width: 260px;
    background-color: #ffffff;
    padding: 15px;
    border-radius: 15px;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

/* Эффект при наведении */
.flex-item:hover {
    transform: translateY(-8px) scale(1.05);
    box-shadow: 0 10px 25px rgba(94, 197, 109, 0.4);
}

/* Изображения */
.flex-item img {
    width: 100%;
    height: 260px; /* фиксированная высота */
    object-fit: cover; /* чтобы фото не растягивалось */
    border: 4px solid #5EC56D;
    border-radius: 12px;
    transition: 0.3s;
}

/* Эффект наведения на фото */
.flex-item:hover img {
    border-color: #A3E8AE;
    filter: brightness(1.1);
}

/* Ссылки (если есть) */
a {
    color: #5EC56D;
    text-decoration: none;
    transition: color 0.3s;
}

a:hover {
    color: #3C9B57;
    text-decoration: underline;
}
